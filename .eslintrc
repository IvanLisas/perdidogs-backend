{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        "indent": [
            "warn",
            2
        ],
        "semi": [
            2,
            "never"
        ],
        "max-len": [
            2,
            1520,
            2
        ]
    },
    "env": {
        "jest": true,
        "browser": true,
        "node": true,
        "es6": true
    }
  }