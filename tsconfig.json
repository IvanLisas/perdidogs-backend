{
    //Configuracion recomendada instalada dentro de node_modules
    //Es la misma escrita aca, por lo que no hace falta tenerlo
    /* "extends": "@tsconfig/recommended/tsconfig.json", */

    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",

    "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "moduleResolution": "node", 
      "watch": true, //Este hace que cada vez que se guarda, ts transpile automaticamente a js
      "composite": true
    },

    "include": ["src/**/*"],

    "exclude": ["node_modules", "**/*.spec.ts"]
  }